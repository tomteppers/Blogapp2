<% @posts.each do |post| %>
  <tr>
    <td><%= post.titel %></td>
    <td><%= post.content %></td>
    <td><%= post.blog_id %></td>
    <td><%= link_to 'Show', blog_post_path(@blog, post) %></td>
    <td><%= link_to 'Edit', edit_blog_post_path(@blog, post) %></td>
    <td><%= link_to 'Destroy', blog_post_path(@blog ,post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_blog_post_path(@blog) %>

<%= form_tag search_blog_posts_path(@blog), :method => :get do -%>
    <%=	 text_field_tag :term %>
